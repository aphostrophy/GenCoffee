{
  "compilerOptions": {
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "isolatedModules": true,
    "jsx": "react-native",
    "lib": ["es2017"],
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "target": "esnext",
    "skipLibCheck": true, // This also ignores *.d.ts outside of node_modules
    "baseUrl": ".",
    "paths": {
      "@action-creators/*": ["./src/action-creators/*"],
      "@actions/*": ["./src/actions/*"],
      "@assets/*": ["./src/assets/*"],
      "@components/*": ["./src/components/*"],
      "@constants/*": ["./src/constants/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@navigations/*": ["./src/navigations/*"],
      "@reducers/*": ["./src/reducers/*"],
      "@screens/*": ["./src/screens/*"],
      "@services/*": ["./src/services/*"],
      "@stores/*": ["./src/stores/*"],
      "@styles/*": ["./src/styles/*"],
      "@utils/*": ["./src/utils/*"],

      "@action-creators": ["./src/action-creators"],
      "@actions": ["./src/actions"],
      "@assets": ["./src/assets"],
      "@components": ["./src/components"],
      "@constants": ["./src/constants"],
      "@hooks": ["./src/hooks"],
      "@navigations": ["src/navigations"],
      "@reducers": ["./src/reducers"],
      "@screens": ["./src/screens"],
      "@services": ["./src/services"],
      "@stores": ["./src/stores"],
      "@styles": ["./src/styles"],
      "@utils": ["./src/utils"]
    }
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
    "metro.config.js",
    "jest.config.js"
  ]
}